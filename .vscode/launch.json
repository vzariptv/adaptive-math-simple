{
    // PORT MANAGEMENT INSTRUCTIONS:
    // If you get a 'port already in use' error:
    // 1. Find which process is using the port (macOS/Linux):
    //    lsof -i :8084
    // 2. Stop the process (replace PID with the actual process ID):
    //    kill -9 PID
    // 3. Alternative: Change the port number below to an available port
    
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app:create_app",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
                "DATABASE_URL": "sqlite:////Users/viktoriyazaripova/CascadeProjects/adaptive-math-simple/instance/math_learning.db"
            },
            "args": [
                "run",
                "--port=8084",  // Change this port if 8084 is in use
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": false
        },
        {
            "name": "Python: Debug All Tests (unittest)",
            "type": "debugpy",
            "request": "launch",
            "module": "unittest",
            "args": [
                "discover",
                "-v",
                "-s",
                "tests",
                "-p",
                "test_*.py"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "jinja": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}
